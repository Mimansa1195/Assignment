<link rel="stylesheet" type="text/css" href="~/Scripts/datatables.min.css" />
<style>
    .modal-content {
        box-shadow: 0 3px 7px rgba(108, 43, 105, 0.5);
        border-radius: 0px !important;
        border: 0 !important;
    }

    .modal-header {
        padding: 9px 15px;
        border-top: 10px solid #793f79;
    }
</style>
<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0"> Manage Blogs</h5>
            <div>
                <button type="button" class="btn btn-success" onclick="addBlogPopup();">Add Blogs</button>
            </div>
            <div class="clearfix"> <br /> </div>
            <table id="tblBlogs" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"> </table>
        </div>
    </section>
</div>
<div id="addBlogPopup" class="modal fade" role="dialog" aria-labelledby="mypopupAddBlog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="buttonClose" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true"> &times;</span> </button>
                <h4 class="modal-title"> Add Blogs</h4>
            </div>
            <div class="container margin-top-10">
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label> Title<span class="spnError"> *</span> </label>
                        </div>
                        <div class="col-md-8">
                            <input maxlength="2000" type="text" class="form-control validation-required" placeholder="Enter title" id="title" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label> Description<span class="spnError"> *</span> </label>
                        </div>
                        <div class="col-md-8">
                            <textarea rows="5" class="form-control validation-required" style="width:100%" id="description" maxlength="1000" placeholder="Enter description"> </textarea>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveBlog" type="button" class="btn btn-success"> <i class="fa fa-save"> </i> &nbsp;Save</button>
                <button id="btnClose" type="button" class="btn btn-default"> <i class="fa fa-times"> </i> &nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<div id="editBlogPopup" class="modal fade" role="dialog" aria-labelledby="mypopupEditBlog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="buttonClose" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true"> &times;</span> </button>
                <h4 class="modal-title"> Edit Blog</h4>
            </div>
            <div class="container margin-top-10">
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label> Title<span class="spnError"> *</span> </label>
                        </div>
                        <div class="col-md-8">
                            <input maxlength="2000" type="text" class="form-control validation-required" placeholder="Enter title" id="titleEdit" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label> Description<span class="spnError"> *</span> </label>
                        </div>
                        <div class="col-md-8">
                            <textarea rows="5" class="form-control validation-required" style="width:100%" id="descriptionEdit" maxlength="1000" placeholder="Enter description"> </textarea>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnEditBlog" type="button" class="btn btn-success"> <i class="fa fa-save"> </i> &nbsp;Save</button>
                <button id="btnEditClose" type="button" class="btn btn-default"> <i class="fa fa-times"> </i> &nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script src="~/Scripts/Common.js?v=1"></script>
<script src="~/Scripts/blogs.js?v=1"></script>
